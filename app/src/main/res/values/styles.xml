<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Components-->

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>
    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?textAppearanceBody2</item>
        <item name="itemShapeAppearanceOverlay">@style/Widget.MyTheme.NavigationViewItemShapeAppearanceOverlay</item>
    </style>
    <style name="Widget.MyTheme.NavigationViewItemShapeAppearanceOverlay" parent="">
        <item name="android:colorPrimary">?colorSecondary</item>
    </style>

    <!-- Floating Action Button -->
    <style name="Widget.MyTheme.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyTheme.FloatingActionButton</item>
    </style>
    <style name="ShapeAppearanceOverlay.MyTheme.FloatingActionButton" parent="">
        <item name="cornerSize">@null</item>
    </style>

    <!-- Chip -->
    <style name="Widget.MyTheme.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="chipCornerRadius">@null</item>
        <item name="cornerSize">0dp</item>
    </style>


    <!-- Hacks against default settings -->
    <style name="ThemeOverlay.MyTheme.AppBarLayout" parent="">
        <!--Toolbar should always be within an AppBarLayout which provides the background. -->
        <item name="background">@null</item>
        <item name="colorPrimary">?colorSurface</item>
        <item name="android:titleTextColor">?colorPrimary</item>
        <item name="colorControlNormal">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.MyTheme.NavigationView" parent="">
        <item name="colorPrimary">?colorSecondary</item>
    </style>

    <style name="Widget.MyTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>

</resources>
