<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LightTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="LightThemeContrast.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
    </style>

    <style name="DarkTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="DarkThemeContrast.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="SolarizedTheme" parent="Theme.AppCompat.Light" >
        <item name="android:colorBackground">@color/solarizedBase3</item>
        <item name="android:colorForeground">@color/solarizedBase01</item>
        <item name="android:textColor">@color/solarizedBase00</item>
        <item name="android:textColorPrimary">@color/solarizedBase01</item>
        <item name="android:textColorSecondary">@color/solarizedBase01</item>
        <item name="android:windowBackground">@color/solarizedBase3</item>
        <item name="colorPrimary">@color/solarizedBase2</item>
        <item name="colorAccent">@color/solarizedYellow</item>
        <item name="android:colorPrimaryDark">@color/solarizedBase1</item>
        <item name="android:colorButtonNormal">@color/solarizedBase2</item>
        <item name="android:navigationBarColor">@color/solarizedBase02</item>
        <item name="android:statusBarColor">@color/solarizedBase02</item>
        <item name="appBarOverlayTheme">@style/SolarizedTheme.AppBarOverlay</item>
        <item name="popupOverlayTheme">@style/SolarizedTheme.PopupOverlay</item>
        <item name="icon_favorite">@drawable/ic_star_border_solarized_24dp</item>
        <item name="icon_favorite_list">@drawable/ic_star_solarized_24dp</item>
        <item name="icon_favorite_undo">@drawable/ic_star_solarized_24dp</item>
        <item name="icon_read">@drawable/ic_done_solarized_24dp</item>
        <item name="icon_read_list">@drawable/ic_done_solarized_24dp</item>
        <item name="icon_read_undo">@drawable/ic_undo_solarized_24dp</item>
        <item name="icon_search">@drawable/ic_search_solarized_24dp</item>
        <item name="icon_sort">@drawable/ic_sort_solarized_24dp</item>
    </style>

    <style name="SolarizedTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>
