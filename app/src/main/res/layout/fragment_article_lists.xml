<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.androidCommunicate the way you want with Riot - a universal secure chat app entirely under your control..com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fr.gaulupeau.apps.Poche.ui.MainActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/articles_list_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways"
        android:elevation="4dp"
        />

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:layout_gravity="bottom"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:scaleY="4"
        android:indeterminate="true"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/articles_list_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
