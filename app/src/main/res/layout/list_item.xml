<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:maxHeight="72dp"
    android:minHeight="64dp"
    android:orientation="horizontal"
    android:padding="@dimen/keyline_4">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/keyline_4"
        android:layout_weight="1"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/example_domain"
            android:textAppearance="?textAppearanceCaption" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/keyline_2"
            android:text="@string/untitled_title"
            android:textAppearance="?textAppearanceSubtitle1" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">


        <TextView
            android:id="@+id/estimatedReadingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="top"
            android:text="@string/listItem_estimatedReadingTime"
            android:textAppearance="?textAppearanceCaption" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_2"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/favourite"
                android:layout_width="@dimen/list_item_tail_icon_width"
                android:layout_height="@dimen/list_item_tail_icon_width"
                android:contentDescription="@string/articleList_favoriteMark"
                android:src="@drawable/ic_favorite_24dp" />

            <ImageView
                android:id="@+id/read"
                android:layout_width="@dimen/list_item_tail_icon_width"
                android:layout_height="@dimen/list_item_tail_icon_width"
                android:contentDescription="@string/articleList_ArchivedMark"
                android:src="@drawable/ic_list_24dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>